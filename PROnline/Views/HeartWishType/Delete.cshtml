@model PROnline.Models.HeartWishes.HeartWishType

@{
    ViewBag.Title = "删除心声类型";
    Layout = "~/Views/Shared/Manage/_Detail.cshtml";
}


<h3>确认删除？</h3>

<fieldset>

    <div class="display-label">名称</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TypeName)
    </div>

    <div class="display-label">介绍</div>
    <div class="display-field">
        @Html.Raw(Model.Introduction)
    </div>

    <div class="display-label">备注</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Comment)
    </div>

</fieldset>
@using (Html.BeginForm()) {
    <p class="btn">
        <input type="submit" value="删除" /> |
        @Html.ActionLink("返回", "Index")
    </p>
}
