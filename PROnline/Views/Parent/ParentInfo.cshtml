@model PROnline.Models.Users.Parent
@{
    ViewBag.Title = "家长信息";
    Layout = "~/Views/Shared/Space/_Detail.cshtml";
}
           
<p class="btn">
    @Html.ActionLink("修改家长信息", "Edit", new { id = Model.ParentID }) | 
    @Html.ActionLink("删除", "Delete", "Parent", new { id = Model.ParentID }, null)                               
</p>
<fieldset>
    <div class="display-label">
        用户名</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.User.UserName)
    </div>
    <div class="display-label">
        姓名</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.User.RealName)
    </div>
    <div class="display-label">
        生日</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Birthday)
    </div>
    <div class="display-label">
        工作地点</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.WorkPlace)
    </div>
    <div class="display-label">
        职业</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Career)
    </div>
    <div class="display-label">
        固定电话</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Telepone)
    </div>
    <div class="display-label">
        移动电话</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.MobileTelephone)
    </div>
</fieldset>
<p class="btn">
    @Html.ActionLink("返回", "MyStudent", "Student", null, null)
</p>
