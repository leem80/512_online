@model IEnumerable<PROnline.Models.Donation.DonationStudent>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Student
        </th>
        <th>
            DonationItem
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Student.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DonationItem.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DonationStudentID }) |
            @Html.ActionLink("Details", "Details", new { id=item.DonationStudentID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DonationStudentID })
        </td>
    </tr>
}

</table>
