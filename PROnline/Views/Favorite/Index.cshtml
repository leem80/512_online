@model IEnumerable<PROnline.Models.Resources.Favorite>

@{
    ViewBag.Title = "收藏夹管理";
    Layout = "~/Views/Shared/Space/_List.cshtml";
}

@section head{
    <script src="@Url.Content("~/Content/tips.js")" type="text/javascript"></script>
}

<p class="btn">
    @Html.ActionLink("添加收藏夹", "Create")
</p>
<table id="datatable">
<thead>
    <tr>
        <th>
            名称
        </th>
        <th style="width:100px">
            创建日期
        </th>
        <th style="width:170px">操作</th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            <a  class="tips" title="@item.Commnet" >@item.FavoriteName</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.ActionLink("修改", "Edit", new { id=item.FavoriteID }) |
            @Html.ActionLink("管理收藏", "Index", "FavoriteResource", new { FavoriteID = item.FavoriteID }, null) |
            @Html.ActionLink("删除", "Delete", new { id=item.FavoriteID })
        </td>
    </tr>
}
</tbody>
</table>
@Tools.table("datatable")
