@model PROnline.Models.Letters.Letter

@{
    ViewBag.Title = "详细详情";
    Layout = "~/Views/Shared/Space/_Detail.cshtml";
}

<fieldset>

    <div class="display-label">
        @Html.LabelFor(model => model.Title)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Title)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.Content)
    </div>
    <div class="display-field">
        @Html.Raw(Model.Content)
    </div>

    <div class="display-label">
        发送者
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Sender.RealName)
    </div>

    <div class="display-label">   
        @Html.LabelFor(model => model.SenderDate)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.SenderDate)
    </div>

</fieldset>

<p class="btn">
    <a href="@Request.UrlReferrer">返回</a>
</p>
