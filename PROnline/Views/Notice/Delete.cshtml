@model PROnline.Models.Notices.Notice

@{
    ViewBag.Title = "删除公告";
    Layout = "~/Views/Shared/Manage/_Detail.cshtml";
}


<h3>确认删除?</h3>
<fieldset>

       <div class="display-label">@Html.LabelFor(model => model.NoticeType.TypeName)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.NoticeType.TypeName)
    </div>

    <div class="display-label">@Html.LabelFor(model => model.Title)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Title)
    </div>

    <div class="display-label">@Html.LabelFor(model => model.Content)</div>
    <div class="display-field">
        @Html.Raw(Model.Content)
    </div>

</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="删除" />
        
        <div>
            @Html.ActionLink("返回", "Details", "NoticeType", new { id = Model.NoticeTypeID }, null)
        </div>

    </p>
}
