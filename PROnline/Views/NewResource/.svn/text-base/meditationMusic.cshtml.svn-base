@{
    ViewBag.Title = "冥想之音";
    Layout = "~/Views/Shared/Space/_List.cshtml";
}

<table id="URLList">
    <thead>
        <tr>
            <td>目录</td>
        </tr>
    </thead>
    <tbody>
        @{
            String[] names = {"Open Sky",
                            "Lunar In Forest",
                            "Forest Spring",
                            "Sounds Of The Heart",
                            "Blue Night",
                            "Bamboo Moon",
                            "Moving Moment",
                            "Sky’s Beyond",
                            "Hear The Call",
                            "Night Breeze",
                            "2002 Night",
                            "Wide Open",
                            "New Star",
                            "A Dream Comes True",
                            "Good Night",
                            "Another Pimension",
                            "More Than Words",
                            "The Two Shepherds",
                            "The Yinstrel’s Tale",
                            "Light Of Emotion"         
            };
            int i = 1;
            foreach(String str in names)
            {
                String content = "/content/res/";
                String temp = String.Format("{0:000}", i);
                String path = content + "MSMS-" + temp + "-" + str + ".swf";
                i++;
                <tr>
                    <td>
                        <a href="@path">@str</a>
                    </td>
                </tr>
            }

        }
    </tbody>
</table>

@Tools.table("URLList")



